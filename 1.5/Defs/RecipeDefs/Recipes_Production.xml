<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>Owl_MakeGreenLumber</defName>
		<label>make green lumber</label>
		<description>Make a batch of green lumber using wood logs.</description>
		<jobString>Making green lumber from wood logs.</jobString>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>400</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>10</targetCountAdjustment>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Owl_WoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Owl_WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Owl_GreenLumber>30</Owl_GreenLumber>
		</products>
		<recipeUsers>
			<li>Owl_CarpentersTrestle</li>
			<li>TableMachining</li>
			<li>TM3_ElectricTableSaw</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>Owl_MakeFirewood</defName>
		<label>make firewood</label>
		<description>Make a batch of firewood using available wood.</description>
		<jobString>Making firewood from wood.</jobString>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workAmount>200</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.1</workSkillLearnFactor>
		<targetCountAdjustment>10</targetCountAdjustment>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Owl_WoodLog</li>
	<!-- 	Lumber removed from recipe to prevent inconsistency in results	-->
<!--						<li>Owl_GreenLumber</li>
						<li>WoodLog</li>	-->
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Owl_WoodLog</li>
				<li>Owl_GreenLumber</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Owl_WoodLog</li>
			</thingDefs>
			<disallowedThingDefs>
				<li>Owl_GreenLumber</li>
				<li>WoodLog</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
		<products>
			<Owl_Firewood>50</Owl_Firewood>
		</products>
		<recipeUsers>
			<li>Owl_CarpentersTrestle</li>
			<li>TableMachining</li>
			<li>CraftingSpot</li>
			<li>TM3_ElectricTableSaw</li>
		</recipeUsers>
		<displayPriority>5</displayPriority>
	</RecipeDef>
</Defs>
